{
  "extends": ["schedule:earlyMondays"],
  "enabledManagers": ["composer", "npm"],
  "separateMajorMinor": false,
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchLanguages": ["php"],
      "matchUpdateTypes": ["major"],
      "groupName": "PHP package update"
    },
    {
      "matchLanguages": ["php"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance", "bump"],
      "groupName": "PHP package update (auto merge)"
    },
    {
      "matchLanguages": ["js"],
      "matchUpdateTypes": ["major"],
      "groupName": "JS package update",
      "lockFileMaintenance": { "enabled": true }
    },
    {
      "matchLanguages": ["js"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance", "bump"],
      "groupName": "JS package update (auto merge)",
      "lockFileMaintenance": { "enabled": true }
    }
  ]
}
