{
  "enabledManagers": ["composer", "npm"],
  "separateMajorMinor": false,
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchLanguages": ["php"],
      "matchUpdateTypes": ["major"],
      "groupName": "PHP package update [major]"
    },
    {
      "matchLanguages": ["php"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "PHP package update [minor, patch, pin, digest]",
      "automerge": true
    },
    {
      "matchLanguages": ["js"],
      "matchUpdateTypes": ["major"],
      "groupName": "JS package update [major]",
      "lockFileMaintenance": { "enabled": true }
    },
    {
      "matchLanguages": ["js"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "JS package update [minor, patch, pin, digest]",
      "lockFileMaintenance": { "enabled": true },
      "automerge": true
    }
  ]
}
